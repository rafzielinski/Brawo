<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= @content_type_config[:label].pluralize %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "New #{@content_type_config[:label]}", 
                new_admin_content_path(content_type: @content_type), 
                class: "btn btn-primary" %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @contents.each do |content| %>
        <tr>
          <td><%= content.title %></td>
          <td>
            <span class="badge <%= status_badge_class(content.status) %>">
              <%= content.status.titleize %>
            </span>
          </td>
          <td><%= content.created_at.strftime("%B %d, %Y") %></td>
          <td>
            <%= link_to "View", admin_content_path(content, content_type: @content_type), class: "btn btn-sm btn-info" %>
            <%= link_to "Edit", edit_admin_content_path(content, content_type: @content_type), class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete", admin_content_path(content, content_type: @content_type), 
                        method: :delete, 
                        data: { confirm: "Are you sure?" }, 
                        class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @contents.empty? %>
  <div class="alert alert-info">
    No <%= @content_type_config[:label].pluralize.downcase %> found. 
    <%= link_to "Create your first #{@content_type_config[:label].downcase}", 
                new_admin_content_path(content_type: @content_type) %>
  </div>
<% end %>

