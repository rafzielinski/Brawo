<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= @taxonomy_type_config[:label].pluralize %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "New #{@taxonomy_type_config[:label]}", 
                new_admin_taxonomy_path(taxonomy_type: @taxonomy_type), 
                class: "btn btn-primary" %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Slug</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @taxonomies.each do |taxonomy| %>
        <tr>
          <td><%= taxonomy.name %></td>
          <td><code><%= taxonomy.slug %></code></td>
          <td><%= taxonomy.created_at.strftime("%B %d, %Y") %></td>
          <td>
            <%= link_to "View", admin_taxonomy_path(taxonomy, taxonomy_type: @taxonomy_type), class: "btn btn-sm btn-info" %>
            <%= link_to "Edit", edit_admin_taxonomy_path(taxonomy, taxonomy_type: @taxonomy_type), class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete", admin_taxonomy_path(taxonomy, taxonomy_type: @taxonomy_type), 
                        method: :delete, 
                        data: { confirm: "Are you sure?" }, 
                        class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @taxonomies.empty? %>
  <div class="alert alert-info">
    No <%= @taxonomy_type_config[:label].pluralize.downcase %> found. 
    <%= link_to "Create your first #{@taxonomy_type_config[:label].downcase}", 
                new_admin_taxonomy_path(taxonomy_type: @taxonomy_type) %>
  </div>
<% end %>

