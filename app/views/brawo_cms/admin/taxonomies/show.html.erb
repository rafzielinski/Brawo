<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= @taxonomy.name %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "Edit", edit_admin_taxonomy_path(@taxonomy, taxonomy_type: @taxonomy_type), class: "btn btn-warning" %>
    <%= link_to "Back to List", admin_taxonomies_path(taxonomy_type: @taxonomy_type), class: "btn btn-secondary" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-6">
        <strong>Name:</strong> <%= @taxonomy.name %>
      </div>
      <div class="col-md-6">
        <strong>Slug:</strong> <code><%= @taxonomy.slug %></code>
      </div>
    </div>

    <% if @taxonomy.description.present? %>
      <div class="row mb-3">
        <div class="col-12">
          <strong>Description:</strong>
          <p><%= @taxonomy.description %></p>
        </div>
      </div>
    <% end %>

    <% if @taxonomy_type_config[:fields].present? %>
      <h5 class="mt-4 mb-3">Custom Fields</h5>
      
      <% @taxonomy_type_config[:fields].each do |field| %>
        <div class="row mb-3">
          <div class="col-md-3">
            <strong><%= field[:label] || field[:name].to_s.titleize %>:</strong>
          </div>
          <div class="col-md-9">
            <%= display_field_value(@taxonomy, field) %>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="row mt-4">
      <div class="col-md-6">
        <small class="text-muted">Created: <%= @taxonomy.created_at.strftime("%B %d, %Y at %I:%M %p") %></small>
      </div>
      <div class="col-md-6 text-end">
        <small class="text-muted">Updated: <%= @taxonomy.updated_at.strftime("%B %d, %Y at %I:%M %p") %></small>
      </div>
    </div>
  </div>
</div>

