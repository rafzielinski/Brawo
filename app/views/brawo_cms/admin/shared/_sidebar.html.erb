<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="min-height: calc(100vh - 56px);">
  <ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
      <%= link_to "Dashboard", admin_root_path, class: "nav-link" %>
    </li>
    
    <li class="mt-3">
      <strong class="text-muted small">CONTENT TYPES</strong>
    </li>
    
    <% @content_types.each do |name, config| %>
      <li class="nav-item">
        <%= link_to config[:label], admin_contents_path(content_type: name), class: "nav-link" %>
      </li>
    <% end %>

    <% if @taxonomy_types.present? %>
      <li class="mt-3">
        <strong class="text-muted small">TAXONOMIES</strong>
      </li>
      
      <% @taxonomy_types.each do |name, config| %>
        <li class="nav-item">
          <%= link_to config[:label], admin_taxonomies_path(taxonomy_type: name), class: "nav-link" %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

