<h1 class="mb-4">Articles</h1>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="text-muted">
            By <%= article.author || 'Unknown' %> 
            <% if article.published_date %>
              â€¢ <%= Date.parse(article.published_date).strftime("%B %d, %Y") %>
            <% end %>
          </p>
          <p class="card-text"><%= article.description %></p>
          <% if article.category_name %>
            <span class="badge bg-info"><%= article.category_name %></span>
          <% end %>
          <% if article.featured %>
            <span class="badge bg-warning">Featured</span>
          <% end %>
          <div class="mt-3">
            <%= link_to "Read More", article_path(article), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @articles.empty? %>
  <div class="alert alert-info">
    No articles found. <%= link_to "Create one in the admin panel", brawo_cms.admin_contents_path(content_type: :article) %>
  </div>
<% end %>

