<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Articles", articles_path %></li>
    <li class="breadcrumb-item active"><%= @article.title %></li>
  </ol>
</nav>

<article class="mb-5">
  <h1 class="mb-3"><%= @article.title %></h1>
  
  <div class="mb-4">
    <p class="text-muted">
      By <%= @article.author || 'Unknown' %> 
      <% if @article.published_date %>
        • <%= Date.parse(@article.published_date).strftime("%B %d, %Y") %>
      <% end %>
    </p>
    
    <% if @article.category_name %>
      <span class="badge bg-info"><%= @article.category_name %></span>
    <% end %>
    <% if @article.featured %>
      <span class="badge bg-warning">Featured</span>
    <% end %>
  </div>

  <% if @article.description.present? %>
    <div class="lead mb-4">
      <%= @article.description %>
    </div>
  <% end %>

  <div class="article-body">
    <%= simple_format(@article.body) %>
  </div>

  <div class="mt-4">
    <%= link_to "← Back to Articles", articles_path, class: "btn btn-secondary" %>
    <%= link_to "Edit in Admin", brawo_cms.edit_admin_content_path(@article, content_type: :article), class: "btn btn-warning" %>
  </div>
</article>

